---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/container.astro";
import Cta from "../../components/cta.astro";
import {Picture} from 'astro:assets'

// Generate a new path for every collection entry
export const prerender = true;

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));

}


interface Proptypes {
  entry: any;
}

// Get the entry directly from the prop on render
const { entry}:Proptypes = Astro.props;
const { Content, remarkPluginFrontmatter } = await entry.render();

---
<Layout title={entry.data.title}>
  <Container className="px-16">
    <div class="mx-auto max-w-3xl mt-14">
      <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
        {entry.data.category}
      </span>
      <h1
        class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-1 lg:leading-tight">
        {entry.data.title}
      </h1>

      <Picture src={entry.data.image.src} alt={entry.data.image.alt} height="400" width="500"class="rounded-md my-6 w-full object-cover aspect-video object-top BLOG_IMAGE" />
      <div class="flex gap-2 mt-3 items-center flex-wrap md:flex-nowrap">
        <span class="text-gray-400">
          {entry.data.author}
        </span>
        <span class="text-gray-400">•</span>
        <span class="text-gray-400">{remarkPluginFrontmatter.minutesRead}</span>
        <span class="text-gray-400">•</span>
        <time
          class="text-gray-400"
          datetime={entry.data.publishDate.toISOString()}>
          {entry.data.publishDate.toDateString()}
        </time>
        <span class="text-gray-400 hidden md:block">•</span>
        <div class="w-full md:w-auto flex flex-wrap gap-3">
          {
            entry.data.tags.map((tag:any) => (
              <span class="text-sm text-gray-500">#{tag}</span>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mx-auto prose prose-lg mt-6 max-w-3xl">
      <Content />
    </div>
    <Cta title="Get a free solar consultation"
        subtitle="We'll help you find the best solar solution for your home."  
        cta="Get Started"
        href="/contact"
   />

    <div class="text-center mt-8">
      <a
        data-astro-prefetch="viewport"
        href="/blog"
        class="bg-gray-100 px-5 py-3 rounded-md hover:bg-gray-200 transition"
        >← Back to Blog</a
      >
    </div>
  </Container>
</Layout>
