---
// solo means the body is alone
const { solo } = Astro.props;
const title = "Residential";

import Container from "@components/container.astro";
import PagebodyLayout from "@layouts/PagebodyLayout.astro";
import { Image } from "astro:assets";
import HeroImage from "@assets/honestpower/office.jpg";
---

<PagebodyLayout title={title} viewTitle={false} solo={solo} class="pt-0">
  {
    solo && (
      <div class="relative">
        <img
          src={HeroImage.src}
          alt="Background image"
          width="800"
          height="300"
          class="object-cover w-full h-64 rounded-lg"
          style="aspect-ratio: 800 / 400; object-fit: cover;"
        />
        <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
          <h2 class="text-3xl font-bold text-white">
            Custom Commercial Solar Panel Power Systems at an Affordable Price
          </h2>
        </div>
      </div>
    )
  }
</PagebodyLayout>
