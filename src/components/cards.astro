---
interface Props {
  list: {
    title: string;
    body: string;
    link?: string;
  }[];
}

let { list }: Props = Astro.props;
---

<section class="cards-component px-16">
  <div class="flex gap-4 flex-col md:flex-row items-center">
    {
      list.map((item, index) => {
        return (
          <div
            data-key={index}
            class={`hover:border-amber-100 rounded-lg border bg-card text-card-foreground shadow-sm max-w-3xl md:max-w-sm`}
            style={`min-width: ${(100 / list.length).toFixed(
              0
            )}%; height: 300px;`}
          >
            {item.link &&(<a
              href={item.link ? item.link : ""}
              class="block  w-full h-full"
            >
              <div class="flex flex-col space-y-1.5 p-6">
                <h3 class="tracking-tight text-xl font-medium">{item.title}</h3>
              </div>
              <div class="p-6 text-sm">{item.body}</div>
              <div class="flex items-center p-6" />
              </a>
            )}
            {!item.link &&(
              <div class="flex flex-col space-y-1.5 p-6">
                <h3 class="tracking-tight text-xl font-medium">{item.title}</h3>
              </div>
              <div class="p-6 text-sm">{item.body}</div>
              <div class="flex items-center p-6" />
            )}
          </div>
        );
      })
    }
  </div>
</section>
