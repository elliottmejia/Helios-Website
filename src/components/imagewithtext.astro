---
interface Props {
  img: {
    src?: string; // Add the 'src' property with the type 'string'
  };
  heading: string;
  alt: string;
  body: string;
  icon: string;
  class?: string;
}
const { img, alt, heading, body, icon, class: classList }: Props = Astro.props;
import { Icon } from "astro-icon";
---

<section
  class={`py-16 px-16 flex flex-col gap-4 md:flex-row items-center md:space-x-6 ${classList}`}
>
  <img
    src={img.src}
    width="500"
    height="500"
    loading="lazy"
    alt={alt}
    class="w-full md:w-1/2 object-cover rounded-md hidden md:block"
    style="aspect-ratio: 500 / 500; object-fit: cover;"
  />
  <div class="mt-6 md:mt-0 w-full md:w-1/2 space-y-4">
    <div class="flex items-center space-x-2">
      {icon && <Icon class="h-8 md:h-12" name={icon} />}
      {
        heading && (
          <h2 class="text-2xl font-semibold text-zinc-900 dark:text-zinc-50">
            {heading}
          </h2>
        )
      }
    </div>
    {
      body && (
        <p class="text-base text-zinc-600 dark:text-zinc-400 leading-normal">
          {body}
        </p>
      )
    }
  </div>
  <img
    src={img.src}
    width="500"
    height="500"
    loading="lazy"
    alt={alt}
    class="w-full md:w-1/2 object-cover mt-8 rounded-md block md:hidden"
    style="aspect-ratio: 500 / 500; object-fit: cover;"
  />
</section>
